--colors=path:fg:cyan
--colors=path:style:bold
--colors=line:style:bold

 # Follow symbolic links
--follow

# Hidden files and directories
--hidden

# Don't search within .git directory
--glob=!.git/*

# Case insensitive
--ignore-case

# Avoid long lines
--max-columns=150

# File types
--type-add
